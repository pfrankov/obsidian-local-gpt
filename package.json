{
  "name": "obsidian-local-gpt",
  "version": "3.4.0",
  "description": "Local GPT assistance for maximum privacy and offline access",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
		"typecheck": "tsc --noEmit && svelte-check --tsconfig tsconfig.json",
		"build": "npm run typecheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"format": "prettier 'styles.css' 'src/**/*.{ts,json}' --write",
		"test": "npm run test:jest && npm run test:component",
		"test:jest": "jest",
		"test:component": "vitest run --config vitest.config.mts",
		"full-check": "npm run format && npm run build && npm run test",
		"prepare": "npx simple-git-hooks"
	},
  "keywords": [
    "obsidian",
    "ollama",
    "ai",
    "plugin",
    "llm",
    "gpt"
  ],
  "author": "Pavel Frankov",
  "license": "MIT",
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/aria-query": "^5.0.4",
    "@types/jest": "^29.5.13",
    "@types/node": "^18.19.68",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "builtin-modules": "3.3.0",
    "esbuild": "0.17.3",
    "esbuild-plugin-inline-worker": "^0.1.1",
    "esbuild-svelte": "^0.8.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "obsidian": "latest",
    "prettier": "3.1.1",
    "simple-git-hooks": "^2.11.0",
    "svelte": "^4.2.19",
    "svelte-check": "^3.8.6",
    "svelte-jester": "^3.0.0",
    "svelte-preprocess": "^5.1.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tslib": "2.4.0",
    "typescript": "4.7.4",
    "vite": "^5.4.11",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "@obsidian-ai-providers/sdk": "^1.5.1",
    "idb": "^8.0.0",
    "pdfjs-dist": "4.6.82",
    "sortablejs": "^1.15.6"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run format"
  }
}
