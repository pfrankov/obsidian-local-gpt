{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "importHelpers": true,
    "isolatedModules": true,
	"strictNullChecks": true,
	"esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "DOM",
      "ES2020",
      "ES2021.WeakRef"
    ],
	"types": [
		"svelte",
		"node",
		"vitest/globals",
		"@testing-library/jest-dom"
	]
  },
  "include": ["src/**/*.ts", "src/**/*.svelte", "src/types/**/*.d.ts"]
}
