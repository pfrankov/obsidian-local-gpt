{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
	"strictNullChecks": true,
	"esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "DOM",
      "ES2020"
    ],
    "types": [
      "svelte",
      "node",
      "jest"
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.svelte", "src/types/**/*.d.ts"]
}
